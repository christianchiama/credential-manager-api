{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"],
      "@util/*": ["util/*"],
      "@type/*": ["type/*"],
      "@route/*": ["route/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@service/*": ["service/*"],
      "@database/*": ["database/*"],
      "@interface/*": ["interface/*"],
      "@controller/*": ["controller/*"],
      "@middleware/*": ["middleware/*"],
    }
  },
  "exclude": ["build", "tests", "node_modules"],
  "include": ["src/**/*.ts"]
}
